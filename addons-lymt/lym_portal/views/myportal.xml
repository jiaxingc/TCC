<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="lym_myportal" name="Portal do Gerente">
            <t t-call="website.layout">
                <t t-set="additional_title">Portal do Gerente</t>
                <t t-call="lym_portal.myportal" />
            </t>
        </template>

        <template id="myportal" name="Portal do Gerente">
            <section class="myportal">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="align-center">
                                <br />
                                <strong style="color:#000000;">Portal do Gerente</strong>
                                <br />
                            </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="twelve columns">
                            <ul class="ca-menu">
                                <li>
                                    <a href="#">
                                        <span class="ca-icon">
                                            <i class="fa fa-bullhorn"></i>
                                        </span>
                                        <div class="ca-content">
                                            <h2 class="ca-main">
                                                Reclamação
                                                <br />
                                                e
                                                <br />
                                                Sugestão
                                            </h2>
                                            <h3 class="ca-sub">Veja se o que pensam dos serviços</h3>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="ca-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" fill="currentColor" class="bi bi-chat-square-dots-fill" viewBox="0 0 16 16">
                                                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2h-2.5a1 1 0 0 0-.8.4l-1.9 2.533a1 1 0 0 1-1.6 0L5.3 12.4a1 1 0 0 0-.8-.4H2a2 2 0 0 1-2-2V2zm5 4a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm4 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                                            </svg>
                                        </span>
                                        <div class="ca-content">
                                            <h2 class="ca-main">
                                                Chat
                                                <br />
                                                Documentation
                                            </h2>
                                            <br></br>
                                            <h3 class="ca-sub">Entrar contato pelo aqui</h3>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="ca-icon">
                                            <i class="fa fa-user"></i>
                                        </span>
                                        <div class="ca-content">
                                            <h2 class="ca-main">
                                                Informações 
                                                <br />
                                                de
                                                <br />
                                                Cliente
                                            </h2>
                                            <h3 class="ca-sub">Fila de pré agendamento</h3>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span class="ca-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" fill="currentColor" class="bi bi-pie-chart-fill" viewBox="0 0 16 16">
                                                <path d="M15.985 8.5H8.207l-5.5 5.5a8 8 0 0 0 13.277-5.5zM2 13.292A8 8 0 0 1 7.5.015v7.778l-5.5 5.5zM8.5.015V7.5h7.485A8.001 8.001 0 0 0 8.5.015z"/>
                                            </svg>
                                        </span>
                                        <div class="ca-content">
                                            <h2 class="ca-main">
                                                Grafico
                                                <br />
                                                de
                                                <br />
                                                Agendamento 
                                            </h2>
                                            <h3 class="ca-sub">Situação / Visualização</h3>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
            <link rel="stylesheet" href="lym_portal/static/src/css/myportal.css" />
            <link rel="stylesheet" href="lym_portal/static/src/css/style.css" />
        </template>

        <template id="my_account_link_override" name="Link to frontend portal Override" inherit_id="portal.user_dropdown">
            <xpath expr="//a[@href='/my/home']" position="replace">
                <div class="menu-myportal" />
            </xpath>
        </template>

        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Font">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/lym_portal/static/src/js/myportal.js" />
                <script type="text/javascript" src="/lym_portal/static/src/js/website_myportal_form_editor.js" />
            </xpath>
        </template>
    </data>
</odoo>