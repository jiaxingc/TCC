<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="lym_sponsor.model_lym_sponsor_banner" model="ir.model">
            <field name="website_form_key">create_banner</field>
            <field name="website_form_access">True</field>
            <field name="website_form_label">Registrar um banner</field>
        </record>

        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>lym_sponsor.banner</value>
            <value eval="['img_desktop', 'img_mobile']" />
        </function>

        <template id="cadastro_banner" name="Cadastro Banner">
            <t t-call="website.layout">
                <t t-set="additional_title">Cadastro de Banner</t>
                <div id="wrap" style="font-size: 160%;">
                    <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001" data-snippet="s_website_form" data-name="Form">
                        <div class="container">
                            <form action="/website_form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-success-mode="redirect" data-success-page="/myportal/banners" data-model_name="lym_sponsor.banner">
                                <div class="s_website_form_rows row s_col_no_bgcolor">

                                    <div class="form-group s_website_form_field col-12" data-type="binary" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class=" col-sm-auto s_website_form_label" style="width: 200px" for="img_desktop1">
                                                <span class="s_website_form_label_content">Imagem Desktop</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input style="font-size: 100%;" type="file" class="form-control-file s_website_form_input" name="img_desktop" required="1" id="img_desktop1" accept="image/png, image/jpeg"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group s_website_form_field col-12" data-type="binary" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class=" col-sm-auto s_website_form_label" style="width: 200px" for="img_mobile1">
                                                <span class="s_website_form_label_content">Imagem Mobile</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input style="font-size: 100%;" type="file" class="form-control-file s_website_form_input" name="img_mobile" required="1" id="img_mobile1" accept="image/png, image/jpeg"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                        <div style="width: 200px;" class="s_website_form_label" />
                                        <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text" style="font-size: 160%;">Enviar</a>
                                        <span id="s_website_form_result" />
                                    </div>

                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </t>
        </template>
    </data>
</odoo>