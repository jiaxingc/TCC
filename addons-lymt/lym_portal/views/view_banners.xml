<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="view_banners" name="Banners">
            <t t-call="website.layout">
                <t t-set="additional_title">Lista de banners</t>
                <div class="container" style="font-size: 160%;">
                    <div class="row align-center col-12" style="margin: 1.6rem; justify-content: center;">
                        <a class="btn btn-primary" href="/myportal/banners/cadastro" style="font-size: 160%; border-radius: 1.6rem;">Cadastrar um novo banner</a>
                    </div>
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">NÂº</th>
                                    <th scope="col">Imagem Desktop</th>
                                    <th scope="col">Imagem Mobile</th>
                                    <th scope="col">Validado</th>
                                    <th scope="col">Feedback</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="count" t-value="1" />
                                <t t-foreach="banners" t-as="b">
                                    <tr>
                                        <th scope="row">
                                            <t t-raw="count" />
                                        </th>
                                        <td>
                                            <img t-if="b.img_desktop" t-att-src="image_data_uri(b.img_desktop)" alt="Imagem Desktop" style="max-width: 555px; max-height: 150px;" />
                                        </td>
                                        <td>
                                            <img t-if="b.img_mobile" t-att-src="image_data_uri(b.img_mobile)" alt="Imagem Mobile" style="max-width: 212.5; max-height: 182px;" />
                                        </td>
                                        <td>
                                            <t t-if="b.valid">
                                                <i class="fa fa-circle-o" />
                                            </t>
                                            <t t-else="">
                                                <i class="fa fa-close" />
                                            </t>
                                        </td>
                                        <td>
                                            <t t-raw="b.feedback" />
                                        </td>
                                        <td>
                                            <a t-attf-href="/myportal/banners/edit/{{b.id}}">
                                                <i class="fa fa-pencil" />
                                            </a>
                                        </td>
                                        <td>
                                            <a t-attf-href="/myportal/banners/delete/{{b.id}}">
                                                <i class="fa fa-trash" />
                                            </a>
                                        </td>
                                        <t t-set="count" t-value="count + 1" />
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>