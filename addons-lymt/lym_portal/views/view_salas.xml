<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="view_salas" name="Salas">
            <t t-call="website.layout">
                <t t-set="additional_title">Lista de salas</t>
                <div class="container" style="font-size: 160%;">

                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">NÂº</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">URL Convidade</th>
                                    <th scope="col">URL Moderador</th>
                                    <!-- <th scope="col">Validado</th> -->
                                    <!-- <th scope="col">Feedback</th> -->
                                    <!-- <th scope="col">Edit</th> -->
                                    <!-- <th scope="col">Delete</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="count" t-value="1" />
                                <t t-foreach="salas" t-as="s">
                                    <tr>
                                        <th scope="row">
                                            <t t-raw="count" />
                                        </th>
                                        <td>
                                            <t t-raw="s.name" />
                                        </td>
                                        <td>
                                            <a t-att-href="s.joinurl" target="_blank">
                                                <t t-raw="s.name" />
                                            </a>
                                        </td>
                                        <td>
                                            <a t-att-href="s.moderatorurl" target="_blank">
                                                <t t-raw="s.name" />
                                            </a>
                                        </td>
                                        <!-- <td>
                                            <t t-if="s.valid">
                                                <i class="fa fa-circle-o" />
                                            </t>
                                            <t t-else="">
                                                <i class="fa fa-close" />
                                            </t>
                                        </td> -->
                                        <!-- <td>
                                            <t t-raw="s.feedback" />
                                        </td> -->
                                        <!-- <td>
                                            <a t-attf-href="/myportal/salas/edit/{{s.id}}">
                                                <i class="fa fa-pencil" />
                                            </a>
                                        </td> -->
                                        <!-- <td>
                                            <a t-attf-href="/myportal/salas/delete/{{s.id}}">
                                                <i class="fa fa-trash" />
                                            </a>
                                        </td> -->
                                        <t t-set="count" t-value="count + 1" />
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>