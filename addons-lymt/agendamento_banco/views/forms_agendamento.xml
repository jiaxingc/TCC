<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="lym_myportal_forms_Agendamento" name="forms_Agendamento">
            <t t-call="website.layout">
                <t t-set="additional_title">forms_Agendamento</t>
                <t t-call="agendamento_banco.forms_Agendamento" />
            </t>
        </template>

        <template id="forms_Agendamento" name="forms_Agendamento">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="">
                    <div class="container">

                        <div class="form-seleciona-fila">
                            <p>Fila:</p>
                            <select name="select">
                                <t t-foreach="filas" t-as="fila">
                                    <option value="fila-pradao"><t t-esc="fila.name"/></option>
                                </t>
                                <!-- <t t-foreach="filas"  t-as="fila">
                                    <option value="fila-prioridade"><t t-esc="fila."/></option>
                                </t> -->
                               
                             </select>
                        </div>


                        <div class="form-seleciona-servico">
                            <p>Serviço :</p>
                            <select name="select">
                                <option value="abrir_conta">Abrir conta</option>
                                <option value="emprestimo">Empréstimo</option>
                                <option value="financiamento">Financiamento</option>
                                <option value="solicitar_cartao">Solicitar Cartão</option>
                                <option value="investimentos">Investimentos</option>
                                <option value="outros">Outros</option>
                                <option value="atendimento_especial">Atendimento especial</option>
                                <option value="previdencia">Previdência</option>
                             </select>
                        </div>
                        <div class="form-group field-login">
                            <label for="data">Data :</label>
                            <input type="date" name="data"  id="data" class="form-control form-control-sm"  required="1"/>
                        </div>
                        <div class="form-group field-login">
                            <p>Hora :</p>
                            <select name="select">
                               <option value="valor1">10:00</option>
                               <option value="valor2">12:00</option>
                               <option value="valor3">14:00</option>
                               <option value="valor3">16:00</option>
                            </select>
                            <!-- <label for="hora">Hora :</label>
                            <input type="time" name="hora" t-att-value="hora" id="hora" class="form-control form-control-sm"  min="09:00" max="18:00" required="1"/> -->
                            
                        </div>
                        <div class="form-group field-login">
                            <label for="descricao">Descrição :</label>
                            <input type="text" name="descricao" t-att-value="descricao" id="descricao" class="form-control form-control-sm" required="1"/>
                        </div>
                        
                        <div class="form-button">
                        <form>
                            <input type="button" value="submit" onclick="msg()">  </input>
                        </form>
                        </div>
                    </div>
                </section>
            </div>
        </template>
    </data>
</odoo>